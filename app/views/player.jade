div(ng-controller='PlayerController')

  footer.player.navbar.navbar-inverse.navbar-fixed-bottom(role='player')
    .container
      .row

        .player-buttons.col-xs-5
          i.player-button.fa.fa-backward(ng-click='onClickPrev()')
          span.player-button-space
          i#playButtonIcon.player-button.fa.fa-play(ng-click='onClickPlay()')
          span.player-button-space
          i.player-button.fa.fa-forward(ng-click='onClickNext()')
        .player-small-buttons.col-xs-1
          i.fa.fa-random
          br
          i.fa.fa-repeat

        #player-progress-area.col-xs-6
          #positionTime(ng-init='positionTimeString="0:00"', ng-bind='positionTimeString')
          #durationTime(ng-init='durationTimeString="0:00"', ng-bind='durationTimeString')
          #player-progress.progress.progress-striped.active
            #player-progress-bar.progress-bar(
              ng-init='progressPercentStyle="{width: 100%}"', ng-style='progressPercentStyle', 
              role='progressbar', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100'
            )
